<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity android:name="com.nayan.nayancamv2.ui.PermissionsDisclosureActivity" />

        <service
            android:name="com.nayan.nayancamv2.hovermode.BackgroundCameraService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|camera" />

        <service
            android:name="com.nayan.nayancamv2.hovermode.PortraitHoverService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <service
            android:name="com.nayan.nayancamv2.hovermode.OverheatingHoverService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <service
            android:name="com.nayan.nayancamv2.extcam.common.ExternalCameraProcessingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <activity
            android:name="com.nayan.nayancamv2.NayanCamActivity"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name="com.nayan.nayancamv2.extcam.common.ExtCamConnectionActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nayan.nayancamv2.extcam.drone.DroneStreamingActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.nayan.nayancamv2.extcam.dashcam.DashcamStreamingActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name="com.nayan.nayancamv2.scout.DriverScoutModeActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="General Updates" />

        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>