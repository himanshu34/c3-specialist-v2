<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_canvas"
        tools:context="co.nayan.canvas.modes.input.InputFragment">

        <include
            android:id="@+id/backgroundContainer"
            layout="@layout/_canvas_background" />

        <include
            android:id="@+id/questionLayout"
            layout="@layout/_question_container" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBottom_toTopOf="@+id/bottomButtonsContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionLayout">

            <RelativeLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/photoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="visible" />

                <co.nayan.c3views.crop.CropPhotoView
                    android:id="@+id/cropView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <co.nayan.c3views.quadrilateral.QuadrilateralPhotoView
                    android:id="@+id/quadrilateralView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <co.nayan.c3views.polygon.PolygonPhotoView
                    android:id="@+id/polygonView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <co.nayan.c3views.paint.PaintPhotoView
                    android:id="@+id/paintView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <co.nayan.c3views.dragsplit.DragSplitPhotoView
                    android:id="@+id/dragSplitView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loaderIV"
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="24dp"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="loading_image.json"
                    app:lottie_loop="true" />

                <ImageView
                    android:id="@+id/reloadIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_reload"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_toStartOf="@id/micIv"
                    android:background="@drawable/bg_input"
                    android:elevation="4dp"
                    android:gravity="center"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/answerEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input"
                        android:focusable="false"
                        android:gravity="center"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/text_dark"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="ABCDEFGHIJKLMNO" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/micIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:background="@drawable/bg_mic"
                    android:elevation="@dimen/margin_5"
                    android:padding="@dimen/margin_10"
                    app:srcCompat="@drawable/mic_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inputTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:background="#E0E0E0"
                android:orientation="horizontal">

                <co.nayan.c3views.keyboard.CustomKeyboardView
                    android:id="@+id/keyboardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible"
                    tools:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/speakerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/micStateTxtContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="15dp">

                        <TextView
                            android:id="@+id/speakNowTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/speak_now"
                            android:textColor="@color/text_light"
                            android:textSize="20sp"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/tapToSpeakTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/tap_to_speak"
                            android:textColor="@color/text_light"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/micStateTxtContainer">

                        <LinearLayout
                            android:id="@+id/sttCenterContainer"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/micStateIv"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="@drawable/bg_mic"
                                android:backgroundTint="@color/bg_mic_state_selector"
                                android:padding="20dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_mic"
                                app:tint="@color/mic_state_selector"
                                tools:visibility="visible" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/micAv"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="mic.json"
                                app:lottie_loop="true"
                                tools:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/backspaceIv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="24dp"
                            android:layout_toEndOf="@id/sttCenterContainer"
                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_backspace_mic" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/contrastSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_40"
            android:background="@drawable/bg_contrast_slider"
            android:elevation="8dp"
            android:max="99"
            android:padding="@dimen/margin_10"
            android:progress="50"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionLayout"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/bottomButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_buttons"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/helpBtnContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/infoIv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/ic_circle_info"
                    app:tint="@color/button_icon_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    android:textColor="@color/button_icon_selector"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sniffingBtnContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/hintIv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/ic_hint"
                    app:tint="@color/button_icon_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sniffing"
                    android:textColor="@color/button_icon_selector"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="52dp"
                android:layout_height="52dp" />

            <LinearLayout
                android:id="@+id/junkBtnContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/junkIv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/ic_junk"
                    app:tint="@color/button_icon_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/junk"
                    android:textColor="@color/button_icon_selector"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submitBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/submitIv"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_button"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_arrow_forward"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="@string/submit"
                android:textColor="@color/button_icon_selector"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>