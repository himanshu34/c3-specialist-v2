<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_canvas">

        <include
            android:id="@+id/backgroundContainer"
            layout="@layout/_canvas_background" />

        <include
            android:id="@+id/questionLayout"
            layout="@layout/_question_container" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionLayout"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/bg_et_search"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
                android:drawableStart="@drawable/ic_template_search"
                android:drawablePadding="@dimen/margin_5"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottomButtonsContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parentSearch">

            <RelativeLayout
                android:id="@+id/middleContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@+id/rvTemplateList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/photoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        tools:background="#99000000"
                        tools:visibility="visible" />

                    <co.nayan.c3views.crop.CropPhotoView
                        android:id="@+id/cropView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <co.nayan.c3views.quadrilateral.QuadrilateralPhotoView
                        android:id="@+id/quadrilateralView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <co.nayan.c3views.polygon.PolygonPhotoView
                        android:id="@+id/polygonView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <co.nayan.c3views.paint.PaintPhotoView
                        android:id="@+id/paintView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <co.nayan.c3views.dragsplit.DragSplitPhotoView
                        android:id="@+id/dragSplitView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loaderIV"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="24dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="loading_image.json"
                        app:lottie_loop="true" />

                    <ImageView
                        android:id="@+id/reloadIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_reload"
                        android:contentDescription="@string/reload"
                        android:visibility="gone" />
                </RelativeLayout>

                <co.nayan.canvas.views.videoplayer.ZoomableExoPlayerView
                    android:id="@+id/exoPlayerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:visibility="gone"
                    app:controller_layout_id="@layout/exo_player_controller_view"
                    app:surface_type="texture_view"
                    tools:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reloadMediaIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/margin_10"
                    android:src="@drawable/ic_reload"
                    android:visibility="gone"
                    app:tint="@color/white"
                    tools:visibility="gone" />
            </RelativeLayout>

            <co.nayan.canvas.views.AutoFitRecyclerView
                android:id="@+id/rvTemplateList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnWidth="@dimen/margin_120"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/middleContainer"
                tools:listitem="@layout/template_view"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <SeekBar
            android:id="@+id/contrastSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_40"
            android:background="@drawable/bg_contrast_slider"
            android:elevation="8dp"
            android:max="99"
            android:padding="@dimen/margin_10"
            android:progress="50"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parentSearch"
            tools:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_buttons"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/helpBtnContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:drawableTop="@drawable/ic_circle_info"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTint="@color/button_icon_selector"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/margin_80"
                android:text="@string/help"
                android:textColor="@color/button_icon_selector"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sniffingBtnContainer"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sniffingBtnContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:drawableTop="@drawable/ic_hint"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTint="@color/button_icon_selector"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/margin_80"
                android:text="@string/sniffing"
                android:textColor="@color/button_icon_selector"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/junkBtnContainer"
                app:layout_constraintStart_toEndOf="@+id/helpBtnContainer"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/junkBtnContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:drawableTop="@drawable/ic_junk"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTint="@color/button_icon_selector"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/margin_80"
                android:text="@string/junk"
                android:textColor="@color/button_icon_selector"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sniffingBtnContainer"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/submitBtnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/submitIv"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:background="@drawable/bg_edit_button"
                android:padding="@dimen/margin_10"
                app:srcCompat="@drawable/ic_arrow_forward"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/submit"
                android:textColor="@color/button_icon_selector"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>