<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_canvas"
        tools:context=".modes.crop.CropFragment">

        <include
            android:id="@+id/backgroundContainer"
            layout="@layout/_canvas_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottomLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/templatesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:visibility="gone"
                tools:visibility="invisible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTemplates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/margin_130"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/template_row" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDictionary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/recyclerViewTemplates"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/dictionary_row" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <co.nayan.c3views.crop.CropPhotoView
                        android:id="@+id/cropView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loaderIV"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="24dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="loading_image.json"
                        app:lottie_loop="true" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/reloadIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_reload"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </RelativeLayout>

                <co.nayan.c3views.keyboard.CustomKeyboardView
                    android:id="@+id/keyboardView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:visibility="gone"
                    tools:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/contrastSlider"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_contrast_slider"
            android:elevation="8dp"
            android:max="99"
            android:padding="12dp"
            android:progress="50"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionLayout"
            tools:visibility="visible" />

        <include
            android:id="@+id/questionLayout"
            layout="@layout/_question_container" />

        <include
            android:id="@+id/bottomLayout"
            layout="@layout/_bottom_controllers" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_edit_button"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/editModeIv"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_home_annotation" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cropModeIv"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="12dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_crop" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/zoomViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/bg_zoom_view"
            android:elevation="4dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <co.nayan.c3views.ZoomView
                android:id="@+id/zoomView"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_margin="2dp" />
        </FrameLayout>

        <include
            android:id="@+id/multiTagsContainer"
            layout="@layout/layout_multi_tags" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>