<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomButtonsContainer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_buttons"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/submitBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/submitIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_arrow_forward"
            app:tint="@color/button_icon_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/junkBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/junkIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_junk"
            app:tint="@color/button_icon_selector" />
    </LinearLayout>

    <View
        android:layout_width="52dp"
        android:layout_height="52dp" />

    <LinearLayout
        android:id="@+id/helpBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infoIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_circle_info"
            app:tint="@color/button_icon_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sniffingBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/hintIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_hint"
            app:tint="@color/button_icon_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/undoBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/undoIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_undo_record"
            app:tint="@color/button_icon_selector" />
    </LinearLayout>
</LinearLayout>