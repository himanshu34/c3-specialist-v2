<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/dashboard</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/dashboard</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/dashboard</item>
        <item name="colorAccent">#6F6F6F</item>
    </style>

    <style name="CanvasTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EditFieldsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/action_item</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="ScreenSharing" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/text_dark</item>
    </style>

    <style name="TextInputOutlineLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="helperTextTextColor">@color/colorBlack</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/dark_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="helperTextTextColor">@color/text_hint</item>
        <item name="boxBackgroundColor">@color/action_item</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/item_spinner_bg</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/margin_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutlinedMaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/colorBlack</item>
        <item name="cornerRadius">@dimen/margin_30</item>
        <item name="strokeColor">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/colorBlack</item>
        <item name="cornerRadius">@dimen/margin_30</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>