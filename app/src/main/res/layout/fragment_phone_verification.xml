<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.nayan.c3specialist_v2.phoneverification.PhoneVerificationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verificationMessageTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_verification_message_1"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/isdLayout"
            style="@style/TextInputOutlineLayoutStyle"
            android:layout_width="@dimen/margin_80"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:attr/actionBarSize"
            app:layout_constraintEnd_toStartOf="@+id/phoneNumberLayout"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/verificationMessageTxt">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/isdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ISD"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="5"
                android:maxLines="1"
                android:padding="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/text_light"
                android:textSize="@dimen/default_text_label_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneNumberLayout"
            style="@style/TextInputOutlineLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="@+id/isdLayout"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/isdLayout"
            app:layout_constraintTop_toTopOf="@+id/isdLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:gravity="start"
                android:hint="@string/enter_phone_number"
                android:imeOptions="actionSend"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="@dimen/margin_15"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/text_light"
                android:textSize="@dimen/default_text_label_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/referralLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:attr/actionBarSize"
            app:layout_constraintBottom_toTopOf="@id/sendOTPButton"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/haveAReferralText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center"
                android:text="@string/i_have_referral_code"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/referralVerifiedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_referral_verified_thumb"
                android:drawablePadding="@dimen/margin_10"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center"
                android:text="@string/referral_code_verified"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendOTPButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:backgroundTint="@color/color_states_button"
            android:enabled="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{()-> viewModel.validateUserLogin(isdEt.getText().toString(), phoneNumberEt.getText().toString())}"
            android:padding="@dimen/margin_10"
            android:text="@string/get_otp"
            android:textAllCaps="false"
            android:textColor="@color/color_text_button"
            android:textSize="@dimen/default_text_size"
            android:textStyle="normal"
            app:cornerRadius="@dimen/margin_30"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/referralLayout"
            tools:ignore="MissingPrefix" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/errorMessageTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/sendOTPButton"
            tools:text="Error Found due to FirebaseAuthentication"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>