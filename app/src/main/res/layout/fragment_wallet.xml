                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_30"
                                        android:text="@string/default_points_earned"
                                        android:textColor="@color/text_dark"
