                                        android:text="@string/default_money"
                                        android:textColor="@color/text_dark"
                                        android:textSize="38sp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/specialistWalletHeadTxt"
                                        tools:text="â‚¹ 350" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/specialistWalletPointsTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_30"
                                        android:text="@string/default_points_earned"
                                        android:textColor="@color/text_dark"
                                        app:layout_constraintEnd_toStartOf="@+id/specialistWalletCheckoutBtn"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/specialistWalletAmountTxt"
                                        tools:text="234.50 Points Earned" />

                                    <Button
                                        android:id="@+id/specialistWalletCheckoutBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/margin_40"
                                        android:background="@drawable/bg_checkout"
                                        android:text="@string/checkout"
                                        android:textColor="@color/white"
                                        app:layout_constraintBottom_toBottomOf="@+id/specialistWalletPointsTxt"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@+id/specialistWalletPointsTxt" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/managerWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/margin_15"
                                app:cardElevation="@dimen/margin_3"
                                app:cardUseCompatPadding="true">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
