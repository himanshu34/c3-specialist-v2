                                        android:layout_height="wrap_content"
                                        android:text="@string/leader_wallet"
                                        android:textColor="@color/text_dark"
                                        android:textSize="16sp"
                                        android:visibility="visible"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/leaderWalletAmountTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/default_money"
                                        android:textColor="@color/text_dark"
                                        android:textSize="38sp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/leaderWalletHeadTxt"
                                        tools:text="â‚¹ 350" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/leaderWalletPointsTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_30"
                                        android:text="@string/default_points_earned"
                                        android:textColor="@color/text_dark"
                                        app:layout_constraintEnd_toStartOf="@+id/leaderWalletCheckoutBtn"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/leaderWalletAmountTxt"
                                        tools:text="234.50 Points Earned" />

                                    <Button
                                        android:id="@+id/leaderWalletCheckoutBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/margin_40"
                                        android:background="@drawable/bg_checkout"
                                        android:text="@string/checkout"
                                        android:textColor="@color/white"
                                        app:layout_constraintBottom_toBottomOf="@+id/leaderWalletPointsTxt"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@+id/leaderWalletPointsTxt" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bonusWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/margin_15"
                                app:cardElevation="@dimen/margin_3"
                                app:cardUseCompatPadding="true">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="@dimen/margin_250"
                                    android:padding="@dimen/margin_15">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/bonusWalletHeadTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/bonus"
                                        android:textColor="@color/text_dark"
                                        android:textSize="16sp"
                                        android:visibility="visible"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/bonusWalletAmountTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/default_money"
                                        android:textColor="@color/text_dark"
                                        android:textSize="38sp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/bonusWalletHeadTxt"
                                        tools:text="â‚¹ 350" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/bonusWalletPointsTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_30"
                                        android:text="@string/default_points_earned"
                                        android:textColor="@color/text_dark"
                                        app:layout_constraintEnd_toStartOf="@+id/bonusWalletCheckoutBtn"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/bonusWalletAmountTxt"
                                        tools:text="234.50 Points Earned" />

                                    <Button
                                        android:id="@+id/bonusWalletCheckoutBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/margin_40"
                                        android:background="@drawable/bg_checkout"
                                        android:text="@string/checkout"
                                        android:textColor="@color/white"
                                        app:layout_constraintBottom_toBottomOf="@+id/bonusWalletPointsTxt"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@+id/bonusWalletPointsTxt" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/referralWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/margin_15"
                                app:cardElevation="@dimen/margin_3"
                                app:cardUseCompatPadding="true">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="@dimen/margin_250"
                                    android:padding="@dimen/margin_15">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/referralWalletHeadTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/referral_wallet"
                                        android:textColor="@color/text_dark"
                                        android:textSize="16sp"
                                        android:visibility="visible"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/referralWalletAmountTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/default_money"
                                        android:textColor="@color/text_dark"
                                        android:textSize="38sp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/referralWalletHeadTxt"
                                        tools:text="â‚¹ 350" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/referralWalletPointsTxt"
                                        android:layout_width="wrap_content"
