<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_20">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/headerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pan_image"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/cameraContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:gravity="center"
            android:minWidth="@dimen/margin_70"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/galleryContainer"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLabel">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cameraIv"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                app:srcCompat="@drawable/ic_camera" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/camera"
                android:textColor="@color/text_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/galleryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:gravity="center"
            android:minWidth="@dimen/margin_70"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cameraContainer"
            app:layout_constraintTop_toBottomOf="@+id/headerLabel">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/galleryIv"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                app:srcCompat="@drawable/ic_gallery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/gallery"
                android:textColor="@color/text_light" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>